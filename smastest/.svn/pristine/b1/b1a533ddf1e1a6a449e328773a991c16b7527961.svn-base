/****************************************************************
 * Set spacing of P tags and Print paging.
 ***************************************************************/

/*Set ling-height and modify paragraph spacing*/
p {
	margin: 0;
	padding: 0;
	line-height: 30px;
}

.A4 {
	width:210mm; 
	height:297mm;
	margin-left: auto;
	margin-right: auto;
}

body {text-align:center;}
div.wrap {text-align:left;} 

/*page-break-after*/
@media print{div .content {page-break-after:always;}}