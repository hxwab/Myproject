/****************************************************************
 * 列表字段宽度
 ***************************************************************/

.wd11 {
	width: 120px;
}

/****************************************************************
 * 添加、修改角色、权限字段名、值 
 ***************************************************************/

.wd12 {
	width: 120px;
	text-align: right;
	padding-right: 5px;
	background-color: rgb(230, 230, 230);
}

.wd13 {
	padding-left: 5px;
}

/****************************************************************
 * 查看角色、权限
 ***************************************************************/

.table_view {
	border-collapse: collapse;
	width: 100%;
	text-align: center;
}

.table_view tr {
	height: 31px;
}

.table_view th {
	border: solid #999;
    border-width: 0 1px 1px 1px;
	width: 50%;
	background-color: rgb(230, 230, 230);
}

.table_view td {
	border: solid #999;
    border-width: 1px;
	width: 50%;
}

/****************************************************************
 * 添加、修改权限
 ***************************************************************/

.table_add {
	width: 100%;
	border-collapse: collapse;
}

.table_add tr {
	height: 31px;
}

.table_add th {
	background-color: rgb(230, 230, 230);
	text-align: center;
	border: solid #999;
    border-width: 0 1px 1px 1px;
}

.table_add td {
	border: solid #999;
    border-width: 1px;
}

.wd14 {
	width: 30px;
	text-align: center;
}

.wd15 {
	width: 360px;;
	padding-left: 5px;
}

.wd16 {
	width: auto;
	padding-left: 5px;
}

/* 设置校验信息格式 */
#form_roleright label.error {
	padding-left: 6px;
	padding-bottom: 2px;
	color: rgb(255, 116, 0);
}