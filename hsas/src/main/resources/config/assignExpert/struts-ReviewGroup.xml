<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="reviewGroup" extends="main" namespace="/reviewGroup">
		<action name="toFirstReviewList" class="reviewGroupAction" method="toFirstReviewList">
			<result>/jsp/assignExpert/firstReview/list.jsp</result>
		</action>
		
		<action name="toSecondReviewList" class="reviewGroupAction" method="toSecondReviewList">
			<result>/jsp/assignExpert/secondReview/list.jsp</result>
		</action>
		
		<action name="list" class="reviewGroupAction" method="list">
			<result type="json"><param name="root">jsonMap</param> </result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		<action name="toView" class="reviewGroupAction" method="toView">
			<result>/jsp/assignExpert/firstReview/view.jsp</result>
		</action>
		
		<action name="view" class="reviewGroupAction" method="view">
			<result type="json"><param name="root">jsonMap</param> </result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="prev" class="reviewGroupAction" method="prev">
			<result type="redirectAction">
				<param name="actionName">view</param>
				<param name="entityId">${entityId}</param>
				<param name="viewType">${viewType}</param>
			</result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>

		<action name="next" class="reviewGroupAction" method="next">
			<result type="redirectAction">
				<param name="actionName">view</param>
				<param name="entityId">${entityId}</param>
				<param name="viewType">${viewType}</param>
			</result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="toPage" class="firstAuditGroupAction" method="toPage">
			<result type="chain">list</result>
		</action>
	</package>
</struts>