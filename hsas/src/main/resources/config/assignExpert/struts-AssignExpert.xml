<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="assignExpert" extends="main" namespace="/assignExpert">
		<action name="toFirstReviewList" class="assignExpertAction" method="toFirstReviewList">
			<result>/jsp/assignExpert/firstReview/list.jsp</result>
		</action>
		<action name="toSecondReviewList" class="assignExpertAction" method="toSecondReviewList">
			<result>/jsp/assignExpert/secondReview/list.jsp</result>
		</action>
	
		<action name="toFirstView" class="assignExpertAction" method="toFirstView">
			<result>/jsp/assignExpert/firstReview/view.jsp</result>
		</action>
		<action name="toSecondView" class="assignExpertAction" method="toSecondView">
			<result>/jsp/assignExpert/secondReview/view.jsp</result>
		</action>
		
		<action name="list" class="assignExpertAction" method="list">
			<result type="json"><param name="root">jsonMap</param> </result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="sort" class="assignExpertAction" method="sort">
			<result type="chain">list</result>
		</action>
		
		<action name="toAssignExpertList" class="assignExpertAction" method="toAssignExpertList">
			<result>/jsp/assignExpert/popAssignExpert.jsp</result>
		</action>
		
		<action name="getAssignedExpert" class="assignExpertAction" method="getAssignedExpert">
			<result type="json"><param name="root">jsonMap</param> </result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="addExpert" class="assignExpertAction" method="addExpert">
			<result type="json"><param name="root">jsonMap</param> </result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="deleteExpert" class="assignExpertAction" method="deleteExpert">
			<result type="json"><param name="root">jsonMap</param> </result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="assignLeader" class="assignExpertAction" method="assignLeader">
			<result type="json"><param name="root">jsonMap</param> </result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="simpleSearch" class="assignExpertAction" method="simpleSearch">
			<result type="chain">list</result>
		</action>
		
		<action name="toPage" class="assignExpertAction" method="toPage">
			<result type="chain">list</result>
		</action>
	</package>
</struts>