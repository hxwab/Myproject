<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="firstReview" extends="main" namespace="/product/firstReview">
	
		<action name="toList" class="firstReviewAction" method="toList">
			<result>/jsp/product/firstReview/list.jsp</result>
		</action>

		<action name="list" class="firstReviewAction" method="list">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="simpleSearch" class="firstReviewAction" method="simpleSearch">
			<result type="chain">list</result>
		</action>
		
		<action name="changeYear" class="firstReviewAction" method="changeYear">
			<result type="chain">list</result>
		</action>
		
		<action name="toPage" class="firstReviewAction" method="toPage">
			<result type="chain">list</result>
		</action>
		
		<action name="sort" class="firstReviewAction" method="sort">
			<result type="chain">list</result>
		</action>
		
		<action name="changePageSize" class="firstReviewAction" method="changePageSize">
			<result type="chain">list</result>
		</action>
		
		<action name="advSearch" class="firstReviewAction" method="advSearch">
			<result type="chain">list</result>
		</action>
		
		<action name="toView" class="firstReviewAction" method="toView">
			<result>/jsp/product/firstReview/view.jsp</result>
		</action>

		<action name="view" class="firstReviewAction" method="view">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
	
		<action name="prev" class="firstReviewAction" method="prev">
			<result type="redirectAction">
				<param name="actionName">view</param>
				<param name="entityId">${entityId}</param>
			</result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>

		<action name="next" class="firstReviewAction" method="next">
			<result type="redirectAction">
				<param name="actionName">view</param>
				<param name="entityId">${entityId}</param>
			</result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="addFirstReview" class="firstReviewAction" method="addFirstReview">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="submitReview" class="firstReviewAction" method="submitReview">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="audit" class="firstReviewAction" method="audit">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<!-- 导出 -->
	    <action name="exportListData" class="firstReviewAction" method="exportListData">
        	<result name="success" type="stream">
				<param name="contentType">application/vnd.ms-excel</param>
				<param name="contentDisposition">attachment;fileName="${fileName}"</param>
				<param name="inputName">listDataStream</param>
			</result>
	   	</action>
	   	<!-- 导出单个专家签字表 -->
	    <action name="getExpertSign" class="firstReviewAction" method="getExpertSign">
        	<result name="success" type="stream">
				<param name="contentType">application/vnd.ms-excel</param>
				<param name="contentDisposition">attachment;fileName="${fileName}"</param>
				<param name="inputName">expertSignStream</param>
			</result>
			<result name="nosubmit" type="json"><param name="root">jsonMap</param></result>
	   	</action>		
		</package>
</struts>